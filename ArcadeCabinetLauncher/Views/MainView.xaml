<Page x:Class="ArcadeCabinetLauncher.ViewModels.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArcadeCabinetLauncher.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            
        </Grid.RowDefinitions>

        

        <ItemsControl Grid.Row="1" ItemsSource="{Binding Games}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="500"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                        Width="48"
                        Height="48"
                        Padding="0"
                        Background="Transparent"
                        Command="{Binding DataContext.StartGameCommand,
                        RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}">
                            <Image Source="{Binding ThumbnailPath}" Stretch="Uniform" IsHitTestVisible="False"></Image>
                        </Button>

                        <TextBlock Grid.Column="1" Text="{Binding Name}" Padding="10"/>

                        <TextBlock Grid.Column="2" Text="{Binding GameMaker}" Padding="10"/>

                        <TextBlock Grid.Column="3" Text="{Binding Description}" Padding="10"/>

                        <Button Grid.Column="4"
                        Width="48"
                        Height="48"
                        Padding="0"
                        Background="Transparent"
                        IsEnabled="{Binding DataContext.inAdminMode, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        Command="{Binding DataContext.RemoveGameCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}">
                           
                        </Button>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
