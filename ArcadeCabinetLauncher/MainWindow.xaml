<Window x:Class="ArcadeCabinetLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcadeCabinetLauncher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="Add Game" Command="{Binding AddGameCommand}" IsEnabled="{Binding inAdminMode}"/>
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" IsEnabled="{Binding inAdminMode}"/>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="16">
                <MenuItem Header="{Binding adminButtonText }" Command="{Binding SwitchAdminCommand}"/>
            </MenuItem>
        </Menu>

        <Frame Grid.Row="1" x:Name="MainFrame"
               NavigationUIVisibility="Hidden">
            
        </Frame>
        
    </Grid>
    
</Window>
