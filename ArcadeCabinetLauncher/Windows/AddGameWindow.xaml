<Window x:Class="ArcadeCabinetLauncher.Windows.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcadeCabinetLauncher.Windows"
        mc:Ignorable="d"
        Title="AddGameWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="16">
            <TextBlock Text="Game Name"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Game Maker Name"/>
            <TextBox Text="{Binding GameMaker, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Executable"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding ExecutablePath}" Width="250"/>
                <Button Content="Browse" Command="{Binding BrowseExeCommand}"/>
            </StackPanel>

            <TextBlock Text="Thumbnail"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding ThumbnailPath}" Width="250"/>
                <Button Content="Browse" Command="{Binding BrowseThumbnailCommand}"/>
            </StackPanel>

            <TextBlock Text="Description"/>
            <TextBox Text="{Binding Description}" AcceptsReturn="True" Height="80"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Command="{Binding CancelCommand}"/>
                <Button Content="Save" Command="{Binding SaveCommand}" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
